
{
  "manifest_version": 2,
  "name": "Nemesia",
  "version": "1.0",
  "description": "AI-powered tool for real-time blockchain risk prediction and token behavior analysis.",
  "permissions": ["activeTab"],
  "background": {
    "scripts": ["background/background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content.js"]
    }
  ],
  "icons": {
    "48": "icons/icon.png"
  }
}
